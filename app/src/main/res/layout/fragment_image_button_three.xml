<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/imageButtonFragmentThreeButtons">


    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <com.adrianCzarnecki.anxietyApp.ui.buttons.ImageButtonSquare
            android:name="com.example.themetest.ui.buttons.ImageButtonSquare"
            android:id="@+id/imageButtonThreeUp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="?attr/actionModeShareDrawable"
            android:layout_margin="5dp"
            android:paddingTop="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="0dp"
            android:scaleType="fitXY"
            android:background="@null" />

        <com.adrianCzarnecki.anxietyApp.ui.buttons.ImageButtonSquare
            android:name="com.example.themetest.ui.buttons.ImageButtonSquare"
            android:id="@+id/imageButtonThreeDown"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="?attr/actionModeShareDrawable"
            android:layout_margin="5dp"
            android:paddingTop="0dp"
            android:paddingLeft="5dp"
            android:paddingRight="0dp"
            android:scaleType="fitXY"
            android:background="@null" />

    </LinearLayout>

    <com.adrianCzarnecki.anxietyApp.ui.buttons.ImageButtonRectangle
        android:name="com.example.themetest.ui.buttons.ImageButtonRectangle"
        android:id="@+id/imageButtonThreeRight"
        android:layout_weight="1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        app:srcCompat="?attr/actionModeShareDrawable"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:padding="5dp"
        android:paddingLeft="0dp"
        android:paddingTop="0dp"
        android:cropToPadding="true"
        android:scaleType="fitXY"
        android:background="@null" />

</LinearLayout>